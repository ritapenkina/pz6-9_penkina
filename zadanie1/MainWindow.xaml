<Window x:Class="pz1_penkina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz1_penkina"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="543*"/>
            <ColumnDefinition Width="257*"/>
        </Grid.ColumnDefinitions>


        <ListView x:Name="sortedListView" HorizontalAlignment="Left" VerticalAlignment="Top" Width="410" Margin="195,193,0,0" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Метод 1" DisplayMemberBinding="{Binding Method1}" Width="100"/>
                    <GridViewColumn Header="Метод 2" DisplayMemberBinding="{Binding Method2}" Width="100"/>
                    <GridViewColumn Header="Метод 3" DisplayMemberBinding="{Binding Method3}" Width="100"/>
                    <GridViewColumn Header="Метод 4" DisplayMemberBinding="{Binding Method4}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>


    </Grid>
</Window>
